<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itp341.vong.mark.finalproject.LoginFragment"
    android:background="#117db0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleLabel"
            android:text="QuickHelp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionLabel"
            android:text="Please log in or create an account!"
            android:textSize="25sp"
            android:layout_below="@+id/titleLabel"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/errorLabel"
            android:text=""
            android:textSize="23sp"
            android:layout_below="@id/descriptionLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameLabel"
            android:text="Email"
            android:textSize="20sp"
            android:layout_below="@+id/errorLabel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/usernameEdit"
            android:textSize="20sp"
            android:layout_below="@id/usernameLabel"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/background_dark"
            android:background="@android:color/white"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEdit"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/passwordLabel"
            android:textColor="@android:color/background_dark"
            android:background="@android:color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton"
            android:text="Login"
            android:textSize="20sp"
            android:layout_below="@+id/passwordEdit"
            android:layout_marginLeft="90dp"
            android:textStyle="bold"
            android:background="#b00739"
            android:textColor="@android:color/white"
            android:textColorHighlight="#b00739"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:text="register"
            android:textSize="20sp"
            android:layout_below="@+id/passwordEdit"
            android:layout_toEndOf="@+id/loginButton"
            android:textStyle="bold"
            android:background="#b00739"
            android:textColor="@android:color/white"
            android:textColorHighlight="#b00739"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordLabel"
            android:text="Password"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/usernameEdit"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</FrameLayout>
